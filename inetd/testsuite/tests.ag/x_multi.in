##
## Now the definitions of the different services
##
##

service ftp
{
	socket_type     = stream
	protocol        = tcp
	wait            = no
	user            = root
	server          = /usr/sbin/in.ftpd 
#	server_args	= -a
        instances       = UNLIMITED
}

includedir tmp/idir

service telnet
{
	socket_type     = stream
	protocol        = tcp
	wait            = no
	user            = root
	server          = /usr/sbin/in.telnetd
	server_args	= -n
#	only_from	= localhost
	no_access	=
}
