// adding a service to a multi-file config, #26999
{
    integer old = WFM::SCRGetDefault ();

    integer h = WFM::SCROpen ("ag_netd", false);
    if (h < 1)
    {
	return;
    }
    WFM::SCRSetDefault (h);
    SCR::Xinetd (WFM::Args (0));

    list r = SCR::Read (.services);
    map service = $[
	"changed": true,
	"enabled": true,

	"service": "myservice",
        "socket_type": "stream",
        "protocol": "tcp",
        "wait": false,
        "user": "root",
        "server": "/usr/sbin/myserviced",
        "server_args": "--foo",
	];
    r = add (r, service);
    boolean result = SCR::Write (.services, r);

    WFM::SCRClose (h);
    WFM::SCRSetDefault (old);

    return result;
}
